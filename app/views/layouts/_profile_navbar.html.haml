        .pull-right
          %ul.nav-secondary.follow-settings-nav
            %li
              %span.user-settings
                %a{href: '#'}= fa_icon 'gear'
            %li
              .follow-btn
                %a#follow-btn.btn.btn-primary.following{href: '#'} Following
